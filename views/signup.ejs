<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Smarthome</title>
    <link rel="stylesheet" href="./styles/login.css" />
  </head>

  <body>
    <div class="main">
      <form action="" method="POST" class="form" id="form-1">
        <h3 class="heading">Sign up</h3>
        <p class="desc">Please enter all fields!</p>
        <div class="form-group">
          <label for="fullname" class="form-label">Username</label>
          <input
            id="fullname"
            name="fullname"
            type="text"
            placeholder="Ex: Mr Minh"
            class="form-control"
          />
          <span class="form-message"></span>
        </div>

        <div class="form-group">
          <label for="email" class="form-label">Email</label>
          <input
            id="email"
            name="email"
            type="text"
            placeholder="Ex: levanminhptit@gmail.com"
            class="form-control"
          />
          <span class="form-message"></span>
        </div>

        <div class="form-group">
          <label for="password" class="form-label">Password</label>
          <input
            id="password"
            name="password"
            type="password"
            placeholder="Your password"
            class="form-control"
          />
          <span class="form-message"></span>
        </div>

        <div class="form-group">
          <label for="password_confirmation" class="form-label"
            >Comfirm password</label
          >
          <input
            id="password_confirmation"
            name="password_confirmation"
            placeholder="Your Comfirm password"
            type="password"
            class="form-control"
          />
          <span class="form-message"></span>
        </div>

        <button class="form-submit">Sign up</button>
        <div class="notAcount">
          Already have an account?<a href="login">Login Here</a>
        </div>
      </form>
    </div>
    <script src="./process/validatorForm.js"></script>
    <script>
      Validator({
        form: "#form-1",
        errorSelector: ".form-message",
        rule: [
          Validator.isRequired("#fullname", "Vui lòng nhập tên đầy đủ"),

          Validator.isRequired("#email", "Vui lòng nhập tên đầy đủ"),
          Validator.isEmail("#email", "Vui lòng nhập email của bạn"),

          Validator.isRequired("#password", "Vui lòng nhập tên đầy đủ"),
          Validator.minLength("#password", 6),

          Validator.isRequired(
            "#password_confirmation",
            "Vui lòng nhập tên đầy đủ"
          ),
          Validator.isComfirmed(
            "#password_confirmation",
            function () {
              return document.querySelector("#form-1 #password").value;
            },
            "Nhập lại mật khẩu không chính xác"
          ),
        ],
        onsubmit: function (data) {
          localStorage.setItem("usename", JSON.stringify(data));
          console.log(data);
          window.location.href = "login";
        },
      });
    </script>
  </body>
  ss
</html>
